			
			<!--Console Content-->
			
			<div class="flex flex-wrap">
            <%= for products <- @products do %>

                <div class="w-full md:w-1/2 xl:w-1/3 p-3">
                <%= link to: Routes.products_register_path(@conn, :index, products.product) do %>
                    <%= if products.product_info.percentage_stock > 50 do %>
                    <div class="bg-white border  border-b border-green-light rounded shadow p-2 hover:bg-green-lightest">
                        <div class="flex flex-row items-center">
                            <div class="flex-shrink pr-4">
                                <div class="rounded p-3 bg-green-dark"><i class="fa fa-wallet fa-2x fa-fw fa-inverse"></i></div>
                            </div>
                            <div class="flex-1 text-right md:text-center">
                                <h5 class="uppercase text-green-dark"><%= products.product.name %></h5>
                                <h3 class="">qtd: <%= products.product_info.qt_stock %>  <%=  %> <span class="text-green"><i class="fas fa-caret-up"></i></span></h3>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    <%= if products.product_info.percentage_stock < 50  and products.product_info.percentage_stock > 30 do %>
                     <div class="bg-white border  border-b border-yellow-light rounded shadow p-2 hover:bg-yellow-lightest">
                        <div class="flex flex-row items-center">
                            <div class="flex-shrink pr-4">
                                <div class="rounded p-3 bg-yellow-dark"><i class="fa fa-wallet fa-2x fa-fw fa-inverse"></i></div>
                            </div>
                            <div class="flex-1 text-right md:text-center">
                                <h5 class="uppercase text-yellow-dark"><%= products.product.name %></h5>
                                <h3 class="">qtd: <%= products.product_info.qt_stock %>  <%=  %> <span class="text-yellow"><i class="fas fa-caret-down"></i></span></h3>
                            </div>
                        </div>
                    </div>
                     <% end %>
                    <%= if products.product_info.percentage_stock < 30  do %>
                        <div class="bg-white border  border-b border-red-light rounded shadow p-2 hover:bg-red-lightest">
                            <div class="flex flex-row items-center">
                                <div class="flex-shrink pr-4">
                                    <div class="rounded p-3 bg-red-dark"><i class="fa fa-wallet fa-2x fa-fw fa-inverse"></i></div>
                                </div>
                                <div class="flex-1 text-right md:text-center">
                                    <span class="text-white rounded bg-red">- Reponha o estoque do produto! -</span>
                                    <h5 class="uppercase text-grey"><%= products.product.name %></h5>
                                    <h3 class="">qtd: <%= products.product_info.qt_stock %>  <%=  %> <span class="text-red"><i class="fas fa-caret-down"></i></span></h3>
                                </div>
                            </div>
                        </div>
                    <% end %>
                    <% end %>
                    </div>
                    <% end %>
                    <!--/Metric Card-->
                </div>
             