					<li class="mr-6 my-2 md:my-0">
                        <%= link  class: "block py-1 md:py-3 pl-1 align-middle text-blue-dark no-underline hover:text-black border-b-2 border-blue-dark hover:border-blue-dark" ,  to: Routes.page_path(@conn, :index)  do %>
                            <i class="fas fa-home fa-fw mr-3 text-blue-dark"></i><span class="pb-1 md:pb-0 text-sm">Home</span>
                        <% end %>
                    </li>
										  <%= if @current_user.role == "admin" do %>

												<li class="mr-6 my-2 md:my-0">
													<%= link  class: "block py-1 md:py-3 pl-1 align-middle text-grey no-underline hover:text-black border-b-2 border-white hover:border-pink",  to: Routes.user_path(@conn, :index) do %>
